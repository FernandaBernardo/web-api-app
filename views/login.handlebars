<section class="signup-container">
    <h1 class="title">Login</h1>

    <form class="signup" action="#" method="POST">
        <label for="fullname">
            Full Name
            <span class="optional">(optional)</span>
        </label>
        <input type="text" placeholder="Full Name">

        <label for="email">Email</label>
        <input type="email" placeholder="yourname@company.com" autocomplete required>
        
        <label for="username">Username</label>
        <input type="text" placeholder="Username" minlength="5" required>

        <label for="password">Password</label>
        <input type="password" minlength="5" maxlength="20" placeholder="Strong password" required>

        <input type="submit" value="Sign Up">
    </form>
</section>